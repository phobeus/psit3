<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.app.movietap.MovieDetailActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Movie title"
        android:id="@+id/movieDetail_textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/movieDetail_imageViewPoster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:layout_below="@+id/movieDetail_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView"
        android:layout_below="@+id/movieDetail_imageViewPoster"/>



    
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="zur Wunschliste hinzufügen"
        android:id="@+id/movieDetail_buttonWish"
        android:layout_below="@+id/movieDetail_imageViewPoster"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/ic_gift"
        android:layout_alignParentStart="true"
        android:textColor="@color/green_overlay" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="zur Merkliste hinzufügen"
        android:id="@+id/movieDetail_buttonRemember"
        android:layout_below="@+id/movieDetail_buttonWish"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/ic_library"
        android:layout_alignParentStart="true"
        android:textColor="@color/green_overlay" />


</RelativeLayout>

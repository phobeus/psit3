<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.app.movietap.SettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Du bist"
        android:id="@+id/textViewTitleYouAre"
        android:textColor="@color/green_overlay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="your email"
        android:id="@+id/settings_textViewEmail"
        android:layout_below="@+id/textViewTitleYouAre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="your nickname"
        android:id="@+id/settings_textViewNickName"
        android:layout_below="@+id/settings_textViewEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Passwort ändern"
        android:id="@+id/textViewTitleChangePw"
        android:textColor="@color/green_overlay"
        android:layout_below="@+id/settings_textViewNickName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/settings_textViewChangePw"
        android:layout_below="@+id/textViewTitleChangePw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ändern"
        android:id="@+id/button"
        android:layout_toEndOf="@+id/settings_textViewChangePw"
        android:layout_alignBottom="@+id/settings_textViewChangePw"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="App start"
        android:id="@+id/textViewTitleBehaviour"
        android:textColor="@color/green_overlay"
        android:paddingTop="15dp"
        android:layout_below="@+id/settings_textViewChangePw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="angemeldet bleiben"
        android:id="@+id/settings_textViewBehaviour_1"
        android:layout_below="@+id/textViewTitleBehaviour"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_textViewBehaviour_2"
        android:checked="false"
        android:layout_below="@+id/settings_textViewBehaviour_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="anonym bleiben" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nach Login fragen"
        android:id="@+id/settings_textViewBehaviour_3"
        android:checked="true"
        android:layout_below="@+id/settings_textViewBehaviour_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Dank an"
        android:id="@+id/textViewTitleCredits"
        android:layout_below="@+id/settings_textViewBehaviour_3"
        android:textColor="@color/green_overlay"
        android:paddingTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="themoviedb.org\nparse.com\naQuery\n? JSONLibrary\n? Library that handles WebService"
        android:id="@+id/settings_textViewCredits"
        android:layout_below="@+id/textViewTitleCredits"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Über diese App"
        android:id="@+id/textViewTitleAbout"
        android:textColor="@color/green_overlay"
        android:layout_below="@+id/settings_textViewCredits"
        android:paddingTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Version 0.9\nAutoren: Pascal Stählin, Marcel Röösli, Andreas Plüss\nIm Auftrag von: ZHAW PSIT3\nLicence: GNU MIT"
        android:id="@+id/settings_textViewAbout"
        android:layout_below="@+id/textViewTitleAbout"
        android:textSize="12dp" />

</RelativeLayout>

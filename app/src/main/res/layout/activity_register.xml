<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.app.movietap.RegisterActivity"
    android:id="@+id/app">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="220px"
        android:adjustViewBounds="true"
        android:contentDescription="MovieTap Logo"
        android:id="@+id/logoImage"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nick-Name"
        android:ems="10"
        android:id="@+id/nickRegisterText"
        android:layout_below="@+id/logoImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="E-Mail Adresse"
        android:ems="10"
        android:id="@+id/emailRegisterText"
        android:layout_below="@+id/nickRegisterText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Passwort"
        android:ems="10"
        android:id="@+id/passwordRegisterText"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/emailRegisterText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrieren"
        android:id="@+id/submitRegisterButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/passwordRegisterText"
        android:layout_alignEnd="@+id/passwordRegisterText"
        android:background="@drawable/button_purple" />



</RelativeLayout>
